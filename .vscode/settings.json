{  
  "editor.rulers": [80],
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.inlineSuggest.enabled": true,
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,

  "debug.internalConsoleOptions": "neverOpen",
  
  "diffEditor.ignoreTrimWhitespace": false,

  "files.exclude": {
    "**/.git": false,
  },
  
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": false,
    "markdown": false
  },

  "liveServer.settings.root": "/public",
  "liveServer.settings.file": "index.html",
  "liveServer.settings.host": "localhost",
  "liveServer.settings.port": 3000,
  "liveServer.settings.fullReload": false,
  "liveServer.settings.https": {
    "enable": true,
    "cert": "/workspaces/optimal-engineer/.vscode/cert.pem",
    "key": "/workspaces/optimal-engineer/.vscode/key.pem",
    "passphrase": "optimal-engineer"
  },

  "powershell.powerShellDefaultVersion": "PowerShell",
  "powershell.integratedConsole.showOnStartup": false,
  "powershell.suppressAdditionalExeNotFoundWarning": false,

  "terminal.integrated.fontFamily": "'FiraCode Nerd Font Mono', 'Fira Code', Menlo, Monaco, Consolas",

  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.wrapTabs": true,
}